<!-- START PAGE COVER -->
<div class="container-fluid container-fixed-lg ">
  <ul class="breadcrumb">
    <li>
      <p><%= link_to 'Home', admin_root_path %></p>
    </li>
    <li><a href="#" class="active">Brands</a></li>
  </ul>
  <!-- END BREADCRUMB -->
  <h3 class="page-title">Brands</h3>
</div>

<div class="container-fluid container-fixed-lg">
  <%= form_tag update_multiple_admin_static_texts_path, method: :put do %>
      <table id="myDataTable" class="table table-hover" cellspacing="0" width="100%">
        <thead>
        <tr>
          <th>Naam</th>
          <th>Slug</th>
          <th>Acties</th>
        </tr>
        </thead>
        <tbody>
        <% @brands.each do |brand| %>
            <tr>
              <td><%= brand.name %></td>
              <td><%= brand.slug %></td>
              <td>
                <%= link_to 'Edit', edit_admin_brand_path(brand), class: 'btn btn-info' %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>


  <% end %>
</div>

<% content_for :footer do %>
<% end %>