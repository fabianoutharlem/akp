<div class="form-group">
  <div class="nested_fields">
    <div class="field form-group form-group-default">
      <%= f.label :title %> <br/>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="field form-group form-group-default">
      <%= f.label :content %> <br/>
      <%= f.text_area :content, id: 'wysiwyg5', class: 'wysiwyg form-control', placeholder: 'Type something..', required: true, style: 'height: 150px;' %>
    </div>
    <div class="field form-group form-group-default">
      <%= f.label :image %> <br/>
      <%= f.file_field :image %>
    </div>
    <%= link_to_remove_association 'Remove section', f %>
  </div>
</div>