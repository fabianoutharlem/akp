    <p>
      <%= StaticText.homepage_top_text %>
    </p>

    <ul>

      <li>
        <article>
          <figure>
            <a href=""><%= image_tag 'image-zakelijk.jpg' %></a>
          </figure>

          <h1>
            <a href="">Zakelijk financieringen</a>
          </h1>

          <div class="description">
            <p>Financial Lease</p>
          </div>

          <footer>
            <a class="btn btn-small btn-full-width">Direct berekenen</a>
          </footer>
        </article>
      </li>

      <li>
        <article>
          <figure>
            <a href=""><%= image_tag 'image-particuliere.jpg' %></a>
          </figure>

          <h1>
            <a href="">Particuliere financieringen</a>
          </h1>

          <div class="description">
            <p>U bepaald hoeveel u betaald!</p>
          </div>

          <footer>
            <a class="btn btn-small btn-full-width">Direct berekenen</a>
          </footer>
        </article>
      </li>

      <li>
        <article>
          <figure>
            <a href=""><%= image_tag 'image-5050.jpg' %></a>
          </figure>

