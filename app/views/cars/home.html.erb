<%= render('action_pages/home_action_banner', action_page: ActionPage.active_action) if ActionPage.active_action.present? %>

<section class="welcome" style="display:none;">
  <div class="wrapper">


    <h2><%= StaticText.home_welcome_text %></h2>

    <p>
      <%= StaticText.homepage_top_text %>
    </p>

    <ul>

      <li>
        <article>
          <figure>
            <a href="<%= financing_cars_path 'bussiness' %>"><%= image_tag @cms_fields.home_foto_1 ? @cms_fields.home_foto_1.url : 'image-zakelijk.jpg' %></a>
          </figure>

          <h1>
            <a href="<%= financing_cars_path 'bussiness' %>"><%= StaticText.home_business_finance_head %></a>
          </h1>

          <div class="description">
            <p><%= StaticText.home_bussiness_finance_sub_text %></p>
          </div>

          <footer>
            <a class="btn btn-small btn-full-width" href="<%= financing_cars_path 'bussiness' %>"><%= StaticText.home_bussiness_finance_button %></a>
          </footer>
        </article>
      </li>

      <li>
        <article>
          <figure>
            <a href="<%= financing_cars_path 'private' %>"><%= image_tag @cms_fields.home_foto_2 ? @cms_fields.home_foto_2.url : 'image-particuliere.jpg' %></a>
          </figure>

          <h1>
            <a href="<%= financing_cars_path 'private' %>"><%= StaticText.home_private_finance_head %></a>
          </h1>

          <div class="description">
            <p><%= StaticText.home_private_finance_sub_text %></p>
          </div>

          <footer>
            <a class="btn btn-small btn-full-width" href="<%= financing_cars_path 'private' %>"><%= StaticText.home_private_finance_button %></a>
          </footer>
        </article>
      </li>

      <li>
        <article>
          <figure>
            <a href="<%= financing_cars_path '50_50' %>"><%= image_tag @cms_fields.home_foto_3 ? @cms_fields.home_foto_3.url : 'image-5050.jpg' %></a>
          </figure>

          <h1>
            <a href="<%= financing_cars_path '50_50' %>">50/50 Deals
              <small>(Particulier)</small>
            </a>
          </h1>

          <div class="description">
            <p><%= StaticText.home_50_50_sub_text %></p>
          </div>

          <footer>
            <a class="btn btn-small btn-full-width" href="<%= financing_cars_path '50_50' %>"><%= StaticText.home_50_50_finance_button %></a>
          </footer>
        </article>
      </li>

    </ul>

    <div class="warning home"></div>

    <div class="footer">
      <i class="icon arrow-orange-down"></i>
    </div> <!-- .footer -->

  </div> <!-- .wrapper -->
</section> <!-- .welcome -->

<section class="finance_circles">
  <div class="wrapper">
    <div class="container-fluid content_container" style="background: url('<%= image_url 'bg_mogelijkheden.jpg' %>') no-repeat center; background-size: cover">

      <h2>Wilt u deze auto financieren?</h2>

      <h3>Bekijk hier de mogelijkheden!</h3>

      <section class="article_financieren">

        <div class="circle_container">
          <div class="orange_circle">
            <h4>ZAKELIJKE FINANCIERINGEN</h4>

            <p>Financial lease voor de (startende) ondernemer en zzp'r zonder jaarcijfers</p>

            <a href="http://autokredietplan.nl/cars/financing/50_50" target="_blank" class="orange_btn">Klik hier</a>

            <div class="white_circle"></div>
          </div>

          <div class="mini_logo"></div>
        </div>
      </section>
      <section class="article_financieren">

        <div class="circle_container">
          <div class="orange_circle">
            <h4>PARTICULIERE FINANCIERINGEN</h4>

            <p>U bepaald hoeveel u betaald! meer dan 6000 klanten gingen u voor</p>

            <a href="http://autokredietplan.nl/cars/financing/private" target="_blank" class="orange_btn animated">Klik hier</a>

            <div class="white_circle"></div>
          </div>

          <div class="mini_logo"></div>
        </div>
      </section>
      <section class="article_financieren">

        <div class="circle_container">
          <div class="orange_circle">
            <h4>50/50 Deals (Particulier)</h4>

            <p>Betaal nu de helft (inruilauto kan ook volstaan) en de andere helft in 12-48 mnd</p>

            <a href="http://autokredietplan.nl/cars/financing/bussiness" target="_blank" class="orange_btn">Klik hier</a>

            <div class="white_circle"></div>
          </div>

          <div class="mini_logo"></div>
        </div>
      </section>
    </div>
  </div>
</section>

<section class="new-cars">
  <div class="wrapper">
    <h2><%= StaticText.nieuw_binnen %></h2>

    <p class="text">
      <%= StaticText.homepage_nieuw_binnen_subtext %>
    </p>

    <p>
      <a class="btn btn-big" href="<%= voorraad_cars_path %>"><%= StaticText.nieuw_binnen_link_text %></a>
    </p>

    <ul class="cars">
      <%= render @cars %>
    </ul>

    <div class="footer">
      <i class="icon arrow-gray-down"></i>
    </div> <!-- .footer -->
  </div> <!-- .wrapper -->
</section> <!-- .new-cars -->

<%= render partial: 'wizards/pick_a_price', locals: {type: 'private', positioned_home_page: true} %>
<%= render partial: 'financing_icons' %>
<%= render partial: 'service', locals: {reference_avarage: @reference_avarage, references: @references} %>

