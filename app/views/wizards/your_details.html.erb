<section class="wizard-form">
  <div class="wrapper">

    <%= render 'wizards/steps', step: 3 %>

    <h2><%= StaticText.wizard_fill_the_details %></h2>

    <div class="form-container">

      <div class="left">
        <%= render @car, wizard_type: params[:wizard_type] %>
      </div> <!-- .left -->

      <div class="right">
        <form action="<%= final_wizard_path %>" method="post" class="payment-form">
          <input type="hidden" name="car_id" value="<%= @car.id %>"/>
          <p class="select">
            <select class="different" name="request_type" id="">
              <option value="financial" <%== if defined? params[:wizard_type] and params[:wizard_type].present? and params[:wizard_type] == 'bussiness'; 'selected="selected"'; end %>>Zakelijk Financieringen</option>
              <option value="private" <%== if defined? params[:wizard_type] and params[:wizard_type].present? and params[:wizard_type] == 'private'; 'selected="selected"'; end %>>Particulier Financieringen</option>
              <option value="50_50" <%== if defined? params[:wizard_type] and params[:wizard_type].present? and params[:wizard_type] == '50_50'; 'selected="selected"'; end %>>50/50 deals</option>
            </select>
          </p>
          <p class="text right" data-rules="required">
            <input type="text" name="payment" class="text" id="payment-payment" required="required" value="<%== if defined? params[:wizard_type] and params[:wizard_type].present? and params[:wizard_type] == '50_50'; @car.price_50_50; end %>" />
            <label for="payment-payment">Aanbetaling</label>
          </p>
          <p class="text" data-rules="required">
            <input type="text" name="name" class="text" id="payment-name" required="required" />
            <label for="payment-name">Naam</label>
          </p>
          <p class="text right" data-rules="required|numeric">
            <input type="text" name="amount" class="text" id="payment-amount" required="required" />
            <label for="payment-amount">Te financieren bedrag</label>
          </p>
          <p class="text" data-rules="required|phone">
            <input type="text" name="phone" class="text" id="payment-phone" required="required" />
            <label for="payment-phone">Tel nr.</label>
          </p>
          <p class="text right" data-rules="required|alphanumeric">
            <input type="text" name="license_plate" class="text" id="payment-license-plate" required="required" />
            <label for="payment-license-plate">Kenteken</label>
          </p>
          <p class="text" data-rules="required|email">
            <input type="email" name="email" class="text" id="payment-email" required="required" />
            <label for="payment-email">Email</label>
          </p>
          <p class="text right" data-rules="required|alphanumeric">
            <input type="text" name="bkr" class="text" required="required" id="payment-bkr" />
            <label for="payment-bkr">BKR geregistreed?</label>
          </p>
          <p class="text" data-rules="required|numeric">
            <input type="text" name="net_income" class="text" required="required" id="payment-net-income" />
            <label for="payment-net-income">Netto inkomen</label>
          </p>
          <p class="checkbox right">
            <input type="checkbox" name="newsletter_subscribe" class="checkbox" id="payment-newsletter-subscribe" checked="checked" />
            <label for="payment-newsletter-subscribe">Inschrijven nieuwsbrief</label>
          </p>
          <p class="text" data-rules="required|numeric">
            <input type="text" name="partner_net_income" class="text" required="required" id="payment-partner-net-income" />
            <label for="payment-partner-net-income">Netto inkomen partner</label>
          </p>
          <p class="empty right">&nbsp;</p>
          <p class="text" data-rules="required">
            <input type="text" name="rent" class="text" required="required" id="payment-rent" />
            <label for="payment-rent">Huur of hypotheeklasten</label>
          </p>
          <p class="image right">
            <%= image_tag 'let-op-geld-lenen-kost-geld.jpg' %>
          </p>
          <p class="big-text last">
            Uw nieuwe auto, zo dichtbij!
          </p>
          <p class="submit right last">
            <button class="btn btn-small"><%= StaticText.wizard_submit_form %></button>
          </p>
        </form>
      </div> <!-- .right -->

    </div> <!-- .form-container -->

  </div> <!-- .wrapper -->
</section> <!-- .wizard-form -->
