<div class="keywords">

  <section class="heading">

    <h1><%= @blog_page.title %></h1>

    <%= @blog_page.content.html_safe %>

  </section>

  <section class="k_cars">
    <div class="wrapper">
      <h2><%= @blog_page.templateable.nieuw_binnen_titel %></h2>

      <div class="content">
        <%= @blog_page.templateable.nieuw_binnen_content.html_safe %>
      </div>

      <p>
        <a class="btn btn-big" href="<%= voorraad_cars_path %>">Ontdek het aanbod</a>
      </p>

      <ul class="cars">
        <%= render Car.first(8) %>
      </ul>

    </div>
    <!-- .wrapper -->
  </section>
  <!-- .new-cars -->

  <section class="welcome">
    <div class="wrapper">


      <h2><%= @blog_page.templateable.blocks_titel %></h2>

      <div class="content">
        <%= @blog_page.templateable.blocks_heading.html_safe %>
      </div>

      <ul>

        <% @cms_fields = CmsField.first %>

        <li>
          <article>
            <figure>
              <a href="<%= financing_cars_path 'bussiness' %>"><%= image_tag @cms_fields.home_foto_1 ? @cms_fields.home_foto_1.url : 'image-zakelijk.jpg' %></a>
            </figure>

            <h1>
              <a href="<%= financing_cars_path 'bussiness' %>"><%= StaticText.home_business_finance_head %></a>
            </h1>

            <div class="description">
              <p><%= StaticText.home_bussiness_finance_sub_text %></p>
            </div>

            <footer>
              <a class="btn btn-small btn-full-width" href="<%= financing_cars_path 'bussiness' %>"><%= StaticText.home_bussiness_finance_button %></a>
            </footer>
          </article>
        </li>

        <li>
          <article>
            <figure>
              <a href="<%= financing_cars_path 'private' %>"><%= image_tag @cms_fields.home_foto_2 ? @cms_fields.home_foto_2.url : 'image-particuliere.jpg' %></a>
            </figure>

            <h1>
              <a href="<%= financing_cars_path 'private' %>"><%= StaticText.home_private_finance_head %></a>
            </h1>

            <div class="description">
              <p><%= StaticText.home_private_finance_sub_text %></p>
            </div>

            <footer>
              <a class="btn btn-small btn-full-width" href="<%= financing_cars_path 'private' %>"><%= StaticText.home_private_finance_button %></a>
            </footer>
          </article>
        </li>

        <li>
          <article>
            <figure>
              <a href="<%= financing_cars_path '50_50' %>"><%= image_tag @cms_fields.home_foto_3 ? @cms_fields.home_foto_3.url : 'image-5050.jpg' %></a>
            </figure>

            <h1>
              <a href="<%= financing_cars_path '50_50' %>">50/50 Deals
                <small>(Particulier)</small>
              </a>
            </h1>

            <div class="description">
              <p><%= StaticText.home_50_50_sub_text %></p>
            </div>

            <footer>
              <a class="btn btn-small btn-full-width" href="<%= financing_cars_path '50_50' %>"><%= StaticText.home_50_50_finance_button %></a>
            </footer>
          </article>
        </li>

      </ul>

      <div class="warning home"></div>

      <!-- .footer -->

    </div>
    <!-- .wrapper -->
  </section>
  <!-- .welcome -->

</div>



<%= render 'blog_pages/navigation', page: @blog_page %>
<%= render partial: 'layouts/footer_simple' %>