    </div> <!-- .row-2 -->

    <ul class="car-types">
      <li class="hatchback selected">
        <a href="">Hatchback</a>
      </li>
      <li class="wagon">
        <a href="">Stationwagen</a>
      </li>
      <li class="sedan">
        <a href="">Sedan</a>
      </li>
      <li class="coupe">
        <a href="">Coupe</a>
      </li>
      <li class="suv">
        <a href="">SUV</a>
      </li>
      <li class="mpv">
        <a href="">MPV</a>
      </li>
      <li class="cabriolet">
        <a href="">Cabriolet</a>
      </li>
