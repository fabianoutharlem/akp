    </div> <!-- .left -->

    <div class="right">
      <button class="btn">
        Zoeken
      </button>
      <small>
        <a href="" class="more">
          Meer zoekcriteria
          <i class="icon arrow-blue-down-small"></i>
        </a>
        <a href="" class="less">
          Minder zoekcriteria
          <i class="icon arrow-blue-up-small"></i>
        </a>
      </small>
    </div> <!-- .right -->

