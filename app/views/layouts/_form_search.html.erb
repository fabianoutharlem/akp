    <div class="sliders">

      <div class="slider-container left">
        <h5>Selecteer op prijs</h5>

        <div class="slider-range" data-min="0" data-max="1000" data-default="250-750"></div>
      </div> <!-- .slider-container -->

      <div class="slider-container right">
        <h5>Selecteer op prijs per maand v.a.</h5>

        <div class="slider-range" data-min="0" data-max="1000" data-default="250-750"></div>
      </div> <!-- .slider-container -->

      <div class="clear"></div> <!-- .clear -->

    </div> <!-- .sliders -->
  </div> <!-- .advanced -->

  <div class="simple">

    <div class="left">
      <div class="input-wrapper">
        <input type="text" value="" class="text" placeholder="Zoek op; merk, model, type" />
