<form action="" class="search advanced-open">

  <div class="advanced">

    <div class="row row-1">
      <p class="select">
        <select class="search-advanced-brand" name="brand">
          <option value="">Selecteer merk</option>
          <option value="audi">Audi</option>
          <option value="mercedes">Mercedes</option>
        </select>
      </p> <!-- .select -->

      <p class="select">
        <select class="search-advanced-model" name="model">
          <option value="">Selecteer model</option>
        </select>
      </p> <!-- .select -->

      <p class="select">
        <select class="search-advanced-usage" name="usage">
          <option value="">Kilometerstand</option>
          <option value="">10 000 km</option>
          <option value="">10 000 km - 20 000 km</option>
          <option value="">20 000 km - 50 000 km</option>
        </select>
      </p> <!-- .select -->
    </div> <!-- .row-1 -->

    <div class="row row-2">
      <p class="select">
        <select class="search-advanced-fuel" name="fuel">
